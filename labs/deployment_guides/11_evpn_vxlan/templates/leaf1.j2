vrfs:
- name: MGMT
  ip_routing: false
- name: A
  ip_routing: true
- name: B
  ip_routing: true
management_interfaces:
- name: Management0
  description: oob_management
  shutdown: false
  vrf: MGMT
  ip_address: {{ mgmt_ip_address }}
  gateway: 172.16.2.1
  type: oob
management_api_http:
  enable_vrfs:
  - name: MGMT
  enable_https: true

sflow:
  sample: 1000
  polling_interval: 20
  destinations:
    - destination: 127.0.0.1
  source_interface: Loopback0
  run: true

vlans:
- id: 10
  name: Ten
- id: 50
  name: Fifty

vlan_interfaces:
- name: Vlan10
  description: Ten
  shutdown: false
  vrf: A
  ip_virtual_router_addresses:
  - {{ vlan10_ip_address }}
- name: Vlan50
  description: Thirty
  shutdown: false
  vrf: B
  ip_virtual_router_addresses:
  - {{ vlan50_ip_address }}


ethernet_interfaces:
- name: Ethernet1
  description: {{ eth1_description }}
  shutdown: false
  type: routed
  ip_address: {{ eth1_ip_address }}
- name: Ethernet2
  description: {{ eth2_description }}
  shutdown: false
  type: routed
  ip_address: {{ eth2_ip_address }}
- name: Ethernet3
  description: {{ eth3_description }}
  type: switched
  shutdown: false
  vlan: 10
  sspanning_tree_portfast: edge
- name: Ethernet4
  description: {{ eth4_description }}
  type: switched
  shutdown: false
  vlan: 50
  spanning_tree_portfast: edge

loopback_interfaces:
- name: Loopback0
  description: EVPN Peering Source
  shutdown: false
  ip_address: {{ lo0_ip_address }}/32
- name: Loopback1
  description:  VXLAN Tunnel Source
  shutdown: false
  ip_address: {{ lo1_ip_address }}/32
- name: Loopback201
  # description: EVPN Peering Source
  shutdown: false
  vrf: A
  ip_address: {{ lo201_ip_address }}/32
- name: Loopback202
  # description: EVPN Peering Source
  shutdown: false
  vrf: B
  ip_address: {{ lo202_ip_address }}/32

ip_virtual_router_mac_address: 00:1c:73:aa:bb:cc
virtual_source_nat_vrfs:
- name: A
  ip_address: {{ lo201_ip_address }}
- name: B
  ip_address: {{ lo202_ip_address }}

vxlan_interface:
  Vxlan1:
    vxlan:
      udp_port: 4789
      source_interface: Loopback1
      vlans:
      - id: 10
        vni: 10010
      - id: 50
        vni: 10050
      vrfs:
      - name: A
        vni: 50001
      - name: B
        vni: 50002

prefix_lists:
- name: PL-LOOPBACKS
  sequence_numbers:
  - sequence: 10
    action: permit 1.1.1.0/24 le 32
  - sequence: 20
    action: permit 2.2.2.0/24 le 32
- name: PL-P2P-UNDERLAY
  sequence_numbers:
  - sequence: 10
    action: permit 10.0.0.0/8 le 31
route_maps:
- name: RM-CONN-2-BGP
  sequence_numbers:
  - sequence: 10
    type: permit
    match:
    - ip address prefix-list PL-LOOPBACKS
  - sequence: 20
    type: permit
    match:
    - ip address prefix-list PL-P2P-UNDERLAY

  
router_bfd:
  multihop:
    interval: 300
    min_rx: 300
    multiplier: 3

